<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="600.0" prefWidth="1024.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.striker.geekcloud.client.PanelController">
    <HBox>
        <TextField fx:id="tfFileName" focusTraversable="false" promptText="Укажите имя файла на сервере" HBox.hgrow="ALWAYS" />
        <Button focusTraversable="false" onAction="#pressOnDeleteFile" text="Удалить" />
    </HBox>
    <ListView fx:id="filesList" onMouseClicked="#fileListClicked" VBox.vgrow="ALWAYS" />

    <properties>
        <control><fx:reference source="controller"/></control>
    </properties>
</VBox>

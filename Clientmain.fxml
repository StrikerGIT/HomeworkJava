<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="1024.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.striker.geekcloud.client.ClientController">
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="Panel.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightPanel" source="Panel.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <Button focusTraversable="false" onAction="#pressOnDownloadBtn" text="Скачать" HBox.hgrow="ALWAYS" />
        <Button focusTraversable="false" onAction="#pressOnUploadBtn" text="Загрузить" HBox.hgrow="ALWAYS" />
    </HBox>
</VBox>
